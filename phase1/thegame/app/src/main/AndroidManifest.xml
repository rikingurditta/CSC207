<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.thegame">

    <application
        android:name="com.menu.TheGameApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.menu.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.menu.settings.SettingsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.menu.main.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.menu.main.MainActivity" />
        </activity>

        <activity
            android:name="com.group0565.tsu.TsuActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.menu.main.MainActivity" />
        </activity>

        <activity
            android:name="com.group0565.bomberGame.BomberMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.menu.main.MainActivity" />
        </activity>

        <activity
            android:name="com.group0565.racerGame.RacerMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.menu.main.MainActivity" />
        </activity>

    </application>

</manifest>