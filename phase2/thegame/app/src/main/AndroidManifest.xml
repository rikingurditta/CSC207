<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.thegame">

    <application
        android:name="com.group0565.ui.TheGameApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.group0565.ui.achievements.AchievementsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.group0565.ui.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.group0565.ui.settings.SettingsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.group0565.ui.statistics.StatisticsActivity"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.group0565.tsu.core.TsuActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.group0565.bombergame.core.BomberMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.group0565.racer.core.RacerMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:parentActivityName="com.group0565.ui.main.MainActivity"
            android:persistent="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group0565.ui.main.MainActivity" />
        </activity>
    </application>

</manifest>