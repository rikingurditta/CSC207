<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/achievement_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/achievement_image_desc"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/achievement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="?attr/boldTextColor"
        android:textStyle="bold"
        tools:text="Test Achievement" />

    <TextView
        android:id="@+id/achievement_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="?attr/normalTextColor"
        tools:text="This is how you get this achievement" />

    <TextView
        android:id="@+id/achievement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="?attr/normalTextColor"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="12/12/12 12:12:12" />
</LinearLayout>